<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/USDFragment">

    <fragment
        android:id="@+id/USDFragment"
        android:name="com.example.trainee_test.fragments.USDFragment"
        android:label="@string/toolbar_name"
        tools:layout="@layout/fragment_usd_list" >
        <action
            android:id="@+id/action_USDFragment_to_errorFragment"
            app:destination="@id/errorFragment" />
        <action
            android:id="@+id/action_USDFragment_to_descriptionFragment"
            app:destination="@id/descriptionFragment" />
    </fragment>
    <fragment
        android:id="@+id/EURFragment"
        android:name="com.example.trainee_test.fragments.EURFragment"
        android:label="@string/toolbar_name"
        tools:layout="@layout/fragment_eur_list" />
    <fragment
        android:id="@+id/errorFragment"
        android:name="com.example.trainee_test.fragments.ErrorFragment"
        android:label="@string/toolbar_name"
        tools:layout="@layout/fragment_error" >
        <action
            android:id="@+id/action_errorFragment_to_USDFragment"
            app:destination="@id/USDFragment" />
    </fragment>
    <fragment
        android:id="@+id/descriptionFragment"
        android:name="com.example.trainee_test.fragments.DescriptionFragment"
        android:label="{CryptoName}"
        tools:layout="@layout/fragment_description">
        <argument
            android:name="CryptoName"
            android:defaultValue="Bitcoin"/>
        <argument
            android:name="CryptoId"
            android:defaultValue="btc"/>
    </fragment>

</navigation>